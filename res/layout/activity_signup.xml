    <TextView
        android:id="@+id/username"
        android:layout_marginTop="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="@string/username_signup_input"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
    <EditText
        android:id="@+id/usernameInput"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/username"
        android:inputType="text" />
    
    <TextView
        android:id="@+id/usernameError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/usernameInput"
        android:text="@string/invalid_username_message"
        android:textColor="#FF0000"
        android:visibility="gone"
        android:textAppearance="?android:attr/textAppearanceSmall" />
    
    <TextView
        android:id="@+id/password"
        android:layout_marginTop="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/usernameError"
        android:text="@string/password_signup_input"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
    <EditText
        android:id="@+id/passwordInput"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password"
        android:inputType="textPassword" />
    
    <TextView
        android:id="@+id/invalidPasswordError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/passwordInput"
        android:text="@string/invalid_password_message"
        android:textColor="#FF0000"
        android:visibility="gone"
        android:textAppearance="?android:attr/textAppearanceSmall" />
    
    <TextView
        android:id="@+id/confirmPassword"
        android:layout_marginTop="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/invalidPasswordError"
        android:text="@string/password_confirmation"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
    <EditText
        android:id="@+id/confirmPasswordInput"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/confirmPassword"
        android:inputType="textPassword" />
    
    <TextView
        android:id="@+id/nonmatchingPasswordError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/confirmPasswordInput"
        android:text="@string/non_matching_passwords_message"
        android:textColor="#FF0000"
        android:visibility="gone"
        android:textAppearance="?android:attr/textAppearanceSmall" />
    
    <TextView
        android:id="@+id/securityQuestionPrompt"
        android:layout_marginTop="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nonmatchingPasswordError"
        android:text="@string/security_question_prompt"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
    <Spinner
        android:id="@+id/securityQuestionSpinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/securityQuestionPrompt"
        android:layout_centerHorizontal="true"
        android:drawSelectorOnTop="true"
        android:textSize="12sp"
        android:entries="@array/security_question_array"
        android:prompt="@string/security_question_prompt" />
    
    <TextView
        android:id="@+id/securityAnswerPrompt"
        android:layout_marginTop="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/securityQuestionSpinner"
        android:text="@string/security_answer_prompt"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
    <EditText
        android:id="@+id/securityAnswerInput"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/securityAnswerPrompt"
        android:layout_centerHorizontal="true"
        android:inputType="text" />
    
    <Button
        android:id="@+id/finishButton"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/securityAnswerInput"
        android:layout_centerHorizontal="true"
        android:text="@string/next_button"
        android:onClick="gotoValidator" />

</RelativeLayout>