<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SecurityQuestionActivity" >

    <TextView
        android:id="@+id/securityQuestionPrompt"
        android:layout_marginTop="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="@string/security_question_prompt"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
    <Spinner
        android:id="@+id/securityQuestionSpinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/securityQuestionPrompt"
        android:layout_centerHorizontal="true"
        android:drawSelectorOnTop="true"
        android:textSize="12sp"
        android:entries="@array/security_question_array"
        android:prompt="@string/security_question_prompt" />
    
    <TextView
        android:id="@+id/securityAnswerPrompt"
        android:layout_marginTop="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/securityQuestionSpinner"
        android:text="@string/security_answer_prompt"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
    <EditText
        android:id="@+id/securityAnswerInput"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/securityAnswerPrompt"
        android:layout_centerHorizontal="true"
        android:inputType="text" />
    
    <Button
        android:id="@+id/finishButton"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/securityAnswerInput"
        android:layout_centerHorizontal="true"
        android:text="@string/finish_signup_button"
        android:onClick="gotoLogin" />

</RelativeLayout>