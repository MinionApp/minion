<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myfirstapp"
    android:versionCode="1"
    android:versionName="1.0" >
    
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	
    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.myfirstapp.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.myfirstapp.HomeActivity"
            android:label="@string/title_activity_home"
            android:parentActivityName="com.example.myfirstapp.LoginActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.myfirstapp.LoginActivity" />
        </activity>
        <activity
            android:name="com.example.myfirstapp.SQLiteTestActivity"
            android:label="@string/title_activity_sqlite_test"
            android:parentActivityName="com.example.myfirstapp.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.myfirstapp.MainActivity" />
        </activity>
        <activity
            android:name="com.example.myfirstapp.SignupActivity"
            android:label="@string/title_activity_signup"
            android:parentActivityName="com.example.myfirstapp.LoginActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.myfirstapp.LoginActivity" />
        </activity>
        <activity
            android:name="com.example.myfirstapp.EmptyValidatorActivity"
            android:parentActivityName="com.example.myfirstapp.SignupActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.myfirstapp.SignupActivity" />
        </activity>
        <activity
            android:name="com.example.myfirstapp.PasswordRecoveryActivity"
            android:label="@string/title_activity_password_recovery"
            android:parentActivityName="com.example.myfirstapp.LoginActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.myfirstapp.LoginActivity" />
        </activity>
        <activity
            android:name="com.example.myfirstapp.PasswordResetActivity"
            android:label="@string/title_activity_password_recovery"
            android:parentActivityName="com.example.myfirstapp.PasswordRecoveryActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.myfirstapp.PasswordRecoveryActivity" />
        </activity>
        <activity
            android:name="com.example.myfirstapp.SecurityQuestionActivity"
            android:label="@string/title_activity_security_question" >
        </activity>
        <activity
            android:name="com.example.myfirstapp.PasswordRecoveryQuestionActivity"
            android:label="@string/title_activity_password_recovery_question" >
        </activity>
        <activity
            android:name="com.example.myfirstapp.NewPasswordValidatorActivity"
            android:label="@string/title_activity_new_password_validator" >
        </activity>
    </application>

</manifest>