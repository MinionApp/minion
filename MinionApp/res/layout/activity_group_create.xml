<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".GroupCreateActivity" >

    <LinearLayout
		android:id="@+id/group_name"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		android:orientation="horizontal">
    	
    	<TextView
        	android:layout_width="wrap_content"
        	android:layout_height="fill_parent"
        	android:layout_weight="1"
        	android:text="Enter Group Name" />
    
    	<EditText 
    	    android:id="@+id/group_name_input"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_weight="2"
        	android:hint="Name"/>
    </LinearLayout>
    
    <LinearLayout
		android:id="@+id/user_1"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/group_name"
		android:orientation="horizontal">
    	
    	<TextView
        	android:layout_width="wrap_content"
        	android:layout_height="fill_parent"
        	android:layout_weight="1"
        	android:text="Enter User 1" />
    
    	<EditText 
    	    android:id="@+id/user_1_input"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_weight="2"
        	android:hint="User Name"/>
    </LinearLayout>
    
    <LinearLayout
		android:id="@+id/user_2"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/user_1"
		android:orientation="horizontal">
    	
    	<TextView
        	android:layout_width="wrap_content"
        	android:layout_height="fill_parent"
        	android:layout_weight="1"
        	android:text="Enter User 2" />
    
    	<EditText 
    	    android:id="@+id/user_2_input"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_weight="2"
        	android:hint="User Name"/>
    </LinearLayout>
    
    <LinearLayout
		android:id="@+id/user_3"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/user_2"
		android:orientation="horizontal">
    	
    	<TextView
        	android:layout_width="wrap_content"
        	android:layout_height="fill_parent"
        	android:layout_weight="1"
        	android:text="Enter User 3" />
    
    	<EditText 
    	    android:id="@+id/user_3_input"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_weight="2"
        	android:hint="User Name"/>
    </LinearLayout>
    
    <LinearLayout
		android:id="@+id/user_4"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/user_3"
		android:orientation="horizontal">
    	
    	<TextView
        	android:layout_width="wrap_content"
        	android:layout_height="fill_parent"
        	android:layout_weight="1"
        	android:text="Enter User 4" />
    
    	<EditText
    	    android:id="@+id/user_4_input"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_weight="2"
        	android:hint="User Name"/>
    </LinearLayout>
    
    <LinearLayout
		android:id="@+id/user_5"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/user_4"
		android:orientation="horizontal">
    	
    	<TextView
        	android:layout_width="wrap_content"
        	android:layout_height="fill_parent"
        	android:layout_weight="1"
        	android:text="Enter User 5" />
    
    	<EditText
    	    android:id="@+id/user_5_input"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_weight="2"
        	android:hint="User Name"/>
    </LinearLayout>
    
    <Button
        android:id="@+id/create_group_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_5"
        android:layout_alignParentRight="true"
        android:text="@string/done"
        android:onClick="sendInvites" />
    
    <TextView
        android:id="@+id/warning"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_below="@id/create_group_button"
        android:text="Cannot have multiple of the same user"
        android:textColor="#ff0000"
        android:visibility="invisible" />

</RelativeLayout>